<idea-plugin>
    <id>com.wxl.plugin.xxl-job-plugin</id>
    <name>Xxl Job Plugins</name>
    <vendor email="wuxingle17@163.com" url="">wxl</vendor>

    <description><![CDATA[
    Show All Xxl Job View In Simple Tool Windows
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Xxl Job View" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="com.wxl.xxljob.toolwindow.XxlJobToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.wxl.xxljob.action.FindFileAction" class="com.wxl.xxljob.action.FindFileAction" text="Find File"
                description="Find target file">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>